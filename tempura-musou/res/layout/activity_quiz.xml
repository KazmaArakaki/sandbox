<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tempura.tempuramusou.QuizActivity">

  <TextView
      android:id="@+id/label_quiz"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

  <TextView
      android:id="@+id/text_quiz"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/label_quiz"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

  <Button
      android:id="@+id/anchor_quiz_images"
      android:layout_width="8dp"
      android:layout_height="8dp"
      android:background="@android:color/transparent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>

  <ImageView
      android:id="@+id/image_quiz_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:scaleType="centerCrop"
      app:layout_constraintBottom_toTopOf="@id/anchor_quiz_images"
      app:layout_constraintRight_toLeftOf="@id/anchor_quiz_images"/>

  <TextView
      android:id="@+id/label_image_quiz_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/image_quiz_1"
      app:layout_constraintLeft_toLeftOf="@id/image_quiz_1"/>

  <ImageView
      android:id="@+id/image_quiz_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toTopOf="@id/anchor_quiz_images"
      app:layout_constraintLeft_toRightOf="@id/anchor_quiz_images"/>

  <TextView
      android:id="@+id/label_image_quiz_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/image_quiz_2"
      app:layout_constraintLeft_toLeftOf="@id/image_quiz_2"/>

  <ImageView
      android:id="@+id/image_quiz_3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/anchor_quiz_images"
      app:layout_constraintRight_toLeftOf="@id/anchor_quiz_images"/>

  <TextView
      android:id="@+id/label_image_quiz_3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/image_quiz_3"
      app:layout_constraintLeft_toLeftOf="@id/image_quiz_3"/>

  <ImageView
      android:id="@+id/image_quiz_4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/anchor_quiz_images"
      app:layout_constraintLeft_toRightOf="@id/anchor_quiz_images"/>

  <TextView
      android:id="@+id/label_image_quiz_4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/image_quiz_4"
      app:layout_constraintLeft_toLeftOf="@id/image_quiz_4"/>
</android.support.constraint.ConstraintLayout>
